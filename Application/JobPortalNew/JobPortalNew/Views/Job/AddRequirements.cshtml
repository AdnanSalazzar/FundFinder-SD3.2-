@model JobPortalNew.Models.JobRequirementsMV

@{
    ViewBag.Title = "Job Requirments";
}


<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Add Project Requirements</h2>

            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">

                                @Html.DropDownList("JobRequirementID",
                                null,
                                "Select Requirments",
                               htmlAttributes: new
                               {
                                   @class = "form-control"

                               })
                                @Html.ValidationMessageFor(model => model.JobRequirementID,
                                "",
                                new
                                {
                                    @class = "text-danger"
                                })
                                @Html.HiddenFor(model => model.PostJobID)

                            </div>
                        </div>
                        <div><hr /></div>



                        <div class="col-sm-12">
                            <div class="form-group">
                              
                                @Html.EditorFor(model => model.JobRequirementDetails, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   @type = "text",
                                   @name = "jobdescription",
                                   @id = "jobdescription",
                                   @placeholder = "Enter Description",
                                   @onfocus = "this.placeholder = '' ",
                                   @onblur = "this.placeholder = 'Enter Description'",

                               }
                           })
                                @Html.ValidationMessageFor(model => model.JobRequirementDetails,
                                "",
                                new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4">

                        <input type="submit" value="Create" class="genric-btn success e-large" style="float:right;" />
                        @Html.ActionLink("Back to List", "CompanyJobsList", null, new { @class = "btn btn-default", @style = "float:left;" })
                    </div>

                </div>
            }


        </div>
    </div>
    </section>

    <hr />



    <h2>Project Requirments</h2>

    <table class="table table-hover">
        <tr>
            <th>
                Requirement Table
            </th>
            <th>
                Details
            </th>

            <th>Action</th>
        </tr>

        @foreach (var item in Model.Details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobRequirementTable.JobRequirementTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobRequirementDetails)
                </td>


                <td>
                    @Html.ActionLink("Delete", "DeleteRequirements", new { id = item.JobRequirementDetailID }, new { @class = "genric-btn danger circle" })
                </td>
            </tr>
        }

    </table>
